@model SmallCartViewModel

@if (Model != null)
{
    <p>Items in cart:<span class="badge badge-primary">@Model.NumberofItems</span></p>
    <p>Total: @Model.TotalAmount.ToString("C2")</p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="Index">ViewCart</a>
    <br />
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Clear</a>

}
else
{
    <p class="lead m-0">Your cart is empty</p>
}